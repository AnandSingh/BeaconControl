<div class="col-xs-12">
  <div class="table-responsive beacons-table sortable-table">

    <table id="import-select-beacon" class="table table-list table-striped">
      <thead>
      <tr>
        <% if local_assigns[:form] == true %>
          <th></th>
        <% end %>
        <th><%= t('.unique_id') %></th>
        <th><%= t('.name') %></th>
        <th><%= t('.venue') %></th>
        <th><%= t('.major') %></th>
        <th><%= t('.minor') %></th>
        <th><%= t('.protocol') %></th>
      </tr>
      </thead>
      <tbody>
      <% beacons.each do |beacon| %>
        <tr class="<%= :active if beacon.db? %>">
          <% if local_assigns[:form] == true %>
            <td class="with-checkbox">
              <% unless beacon.db? %>
                <%= check_box_tag("beacons[]", beacon.unique_id, beacon.import, class: 'checkbox ', id: "beacon_#{beacon.unique_id}") %>
              <% end %>
            </td>
          <% end %>
          <td><%= beacon.unique_id %></td>
          <td><%= beacon.name %></td>
          <td>
            <% if beacon.venue %>
              <%= beacon.venue.name %>
            <% end %>
          </td>
          <td><%= beacon.major %></td>
          <td><%= beacon.minor %></td>
          <td><%= beacon.profile %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
<script>
  $(function () {
    $('#select-all-beacons').on('click', function (event) {
      event.preventDefault();
      $('#import-select-beacon input:checkbox').click();
    });
  });
</script>